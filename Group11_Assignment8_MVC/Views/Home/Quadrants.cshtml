@{
    ViewData["Title"] = "Quadrants Page";
    var Model = ViewBag.Tasks;
}

@*quadrants view that is separated into 4 quadrants and takes the users entered information and sorts it into the quadrants based on their selection*@
@*uses bootstrap styling to make quadrants more defined*@
<div class="container">
    <div class="row" style="border:solid">
        @*<h1>Important</h1>*@
        <div class="col-6" style="border:solid"> @*col-6 makes it half the page*@
            @*<h1>Urgent</h1>*@
            <ul>
                @*creates a list of the items entered that belong in quadrant 1*@
                @foreach (var item in Model)
                {
                    if (item.Quadrant == 1)
                    {
                <li>
                    @item.Task <a asp-controller="Home" asp-action="Edit" asp-route-taskid="@item.TaskId">Edit</a>
                    <a asp-controller="Home" asp-action="Delete" asp-route-taskid="@item.TaskId">Delete</a> @*this allows users to edit and delete each item*@
                </li>
                    }
                    else
                    {

                    }
                }
            </ul>
            </div>
        <div class="col-6" style="border:solid">
            @*<h1>Not Urgent</h1>*@
