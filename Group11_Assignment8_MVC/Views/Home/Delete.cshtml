@*delete confirmation page*@

@model AddTaskResponce 
<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete the record for @Model.Task?</h3>

<form method="post" asp-controller="Home" asp-action="Delete">
    <button type="submit">Delete</button> @*deletes the task item*@
    <a asp-controller="Home" asp-action="Quadrants" class="btn btn-primary">Cancel</a> @*takes you back to the quadrants page without deleting*@

    <input type="hidden" asp-for="TaskId" />
</form>